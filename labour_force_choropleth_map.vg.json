{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Labour Force in 2023",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/labour_force_data.csv",
            "format": {"type": "csv"}
          },
          "key": "Country Name",
          "fields": ["Year"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Year",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [100000, 10000000, 500000000],
          "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
        }
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
        {"field": "Year", "type": "quantitative", "title": "Labour Force"}
      ]
    }
  }
  