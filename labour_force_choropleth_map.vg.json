{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Labour Force as % of Population (2023)",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth",
    "graticule": true
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m"}
      },
      "mark": {"type": "geoshape", "fill": "#D6EAF8", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/labour_force_data.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/population_data.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Population"]
          }
        },
        {
          "calculate": "datum['Measure'] / datum['Population'] * 100",
          "as": "Labor Force % of Population"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Labor Force % of Population",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 100],
            "range": ["#f7fbff", "#08519c"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Labor Force % of Population",
            "type": "quantitative",
            "title": "Labour Force (% of Population)"
          }
        ]
      }
    },
    {
      "mark": {"type": "geoshape", "fill": "#cceeff"},
      "data": {
        "sphere": true
      }
    }
  ]
}
