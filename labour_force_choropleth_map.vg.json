{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Labour Force in 2023",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/ne_110m.topojson",
      "format": {"type": "topojson", "feature": "ne_110m"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/labour_force_data.csv",
            "format": {"type": "csv"}
          },
          "key": "Country Name",
          "fields": ["Year"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Year",
        "type": "quantitative",
        "scale": {
            "type": "threshold",
            "domain": [100000, 1000000, 10000000, 50000000, 100000000, 500000000, 1000000000, 1500000000],
            "range": ["#f7fbff", "#c6dbef", "#9ecae1", "#6baed6", "#3182bd", "#08519c", "#08306b", "#041f3f"]
        }
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Year", "type": "quantitative", "title": "Labour Force"}
      ]
    }
  }
  