{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Labour Force in 2023",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cceeff"
      }
    },
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179_A2/main/labour_force_data.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Percentage"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 100],
            "range": ["#f7fbff", "#08519c"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Percentage", "type": "quantitative", "title": "Labour Force (%)"}
        ]
      }
    }
  ]
}
